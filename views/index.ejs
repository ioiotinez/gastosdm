<% layout('layout') -%>

    <div class="container" id="gastos">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Agregar nuevo</h3>
                </div>
                <div class="panel-body">
                    <div>
                        <div class="form-group">
                            <label for="txtDescripcion">Descripcion:</label>
                            <input id="txtDescripcion" class="form-control" placeholder="Descripcion" v-model="gasto.descripcion">
                        </div>
                        <div class="form-group">
                            <label for="cboCategoria">Categoria:</label>
                            <select id="cboCategoria" class="form-control" v-model="gasto.categoria">
                                <option disabled value="">--Seleccionar--</option>
                                <option v-for="categoria in categorias" value="{{categoria.id}}" >{{categoria.nombre}}</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="dtpFecha">Fecha:</label>
                            <input id="dtpFecha" type="date" class="form-control" placeholder="Fecha" v-model="gasto.fecha">
                        </div>
                        <div class="form-group">
                            <label for="txtMonto">Monto:</label>
                            <div id="txtMonto" class="input-group">
                                <div class="input-group-addon">$</div>
                                    <input type="text" class="form-control" placeholder="Monto" v-model="gasto.monto">
                                <div class="input-group-addon">.00</div>
                            </div>
                        </div>    
                        <br>
                        <button class="btn btn-primary" v-on:click="addGasto">Agregar Gasto</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Ultimos gastos registrados</h3>
                </div>
                <div class="panel-body">
                    <div class="col-sm-3" v-for="gasto in gastos">
                        <div class="list-group">
                            <div class="list-group-item">
                                <h4 class="list-group-item-heading"><i class="glyphicon glyphicon-usd"></i> {{ gasto.monto }}</h4>
                                <h5 class="list-group-item-heading"> {{gasto.descripcion}} </h5>
                                <h5><i class="glyphicon glyphicon-calendar" v-if="gasto.fecha"></i> {{ gasto.fecha.substring(0,
                                    10)}}
                                </h5>
                                <p class="list-group-item-text" v-if="gasto.nombrecategoria">{{gasto.nombrecategoria}}</p>
                                <button class="btn btn-xs btn-danger" v-on:click="deleteGasto($index)">Eliminar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="node_modules/vue/dist/vue.min.js"></script>
        <script src="node_modules/vue-resource/dist/vue-resource.min.js"></script>
        <script src="../static/js/agregar.js"></script>