<% layout('layout') -%>

    <div class="container" id="lista">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Filtrar gastos</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="dtpFechaDesde">Fecha desde:</label>
                        <input type="date" class="form-control" id="dtpFechaDesde" placeholder="Fecha desde" v-model="fechaDesde">
                    </div>
                    <div class="form-group">
                        <label for="dtpFechaHasta">Fecha hasta:</label>
                        <input type="date" class="form-control" id="dtpFechaHasta" placeholder="Fecha hasta" v-model="fechaHasta">
                    </div>
                    <button class="btn btn-primary" v-on:click="filtrarGastos">Buscar</button>
                </div>
            </div>
        </div>
        <br />
        <hr>
        <div class="col-sm-3" v-for="gasto in gastos">
            <div class="list-group">
                <div class="list-group-item">
                    <h4 class="list-group-item-heading"><i class="glyphicon glyphicon-usd"></i> {{ gasto.monto }}</h4>
                    <h5 class="list-group-item-heading"> {{gasto.descripcion}} </h5>
                    <h5><i class="glyphicon glyphicon-calendar" v-if="gasto.fecha"></i> {{ gasto.fecha.substring(0,10) }}</h5>
                    <p class="list-group-item-text" v-if="gasto.monto">{{ gasto.nombrecategoria }}</p>
                    <button class="btn btn-xs btn-danger" v-on:click="deleteGasto($index)">Eliminar</button>
                </div>
            </div>
        </div>

    </div>



    <script src="node_modules/vue/dist/vue.min.js"></script>
    <script src="node_modules/vue-resource/dist/vue-resource.min.js"></script>
    <script src="../static/js/lista.js"></script>